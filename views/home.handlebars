<div class="pcoded-content">
  <!-- Page-header start -->
  <div class="page-header">
    <div class="page-block">
      <div class="row align-items-center">
        <div class="col-md-8">
          <div class="page-header-title">
            <h5 class="m-b-10">Home</h5>
          </div>
        </div>
        <div class="col-md-4">
          <ul class="breadcrumb-title">
            <li class="breadcrumb-item">
              <a href="/"> <i class="fa fa-home"></i> </a>
            </li>
            <li class="breadcrumb-item"><a href="#!">Home</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Page-header end -->
  <div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
      <div class="page-wrapper">
        <!-- Page-body start -->
        <div class="page-body">
          <div class="row">
            <!-- task, page, download counter  start -->
            {{#if faculties}}
              {{#each faculties}}
              <style>
                div.col-md-6 div.card:hover {
                  transform:scale(1.02);
                  opacity: 0.9;
                }
              </style>
                <div class="col-lg-4 col-md-6">  
                  <div class="card" style="-webkit-box-shadow: 0px 0px 6px 1px rgba(224,220,224,1);
                                            -moz-box-shadow: 0px 0px 6px 1px rgba(224,220,224,1);
                                            box-shadow: 0px 0px 6px 1px rgba(224,220,224,1);">
                    <div class="row align-items-center" 
                      style="height: 200px; margin:0 ;width:auto;background: url('/assets/images/3.svg') no-repeat center;background-size: cover">
                    </div>
                    <div class="card-body">
                      <div style="text-align: center;">
                        <a
                            href="/contribution?id={{_id}}"
                            style="color: #5F717A; font-size: 1.5rem; font-weight: bold">{{ name }}
                            </a>
                      </div>
                      
                    </div>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <b class="justify-content-center">No faculties found.</b>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
